# Backend (required)
FOUNDRY_PROJECT_ENDPOINT=https://{resource}.services.ai.azure.com/api/projects/{projectName}
MODEL_DEPLOYMENT_NAME=your-model-deployment

# Backend (optional)
FOUNDRY_API_VERSION=2025-11-15-preview
USE_AGENT_APPLICATION=false
FOUNDRY_APPLICATION_ENDPOINT=
USE_CONNECTED_AGENTS=false
# Run a Foundry portal Workflow (Declarative workflow agent) and record Traces/Runs in Foundry.
USE_FOUNDRY_WORKFLOW=false
# Workflow/Agent name as shown in Foundry portal (Workflows).
FOUNDRY_WORKFLOW_NAME=slide-html-generator
USE_WORKFLOWS=false
FOUNDRY_HTTP_TIMEOUT_SECONDS=600

# Optional: enable HTML download (conflicts with "HTML hidden" requirement)
ALLOW_HTML_DOWNLOAD=false
HTML_DOWNLOAD_API_KEY=

# DefaultAzureCredential via EnvironmentCredential (useful for docker)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
